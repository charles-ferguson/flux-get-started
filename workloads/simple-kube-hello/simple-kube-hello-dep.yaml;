---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: simple-kube-hello
  namespace: simple-kube-hello
  labels:
    app: simple-kube-hello
  annotations:
    fluxcd.io/automated: "true"
spec:
  strategy:
    rollingUpdate:
      maxUnavailable: 0
    type: RollingUpdate
  selector:
    matchLabels:
      app: simple-kube-hello
  template:
    metadata:
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "9797"
      labels:
        app: simple-kube-hello
    spec:
      containers:
      - name: simple-kube-hello
        image: docker.pkg.github.com/charles-ferguson/simple-kube-hello/simple-kube-hello:0.0.1
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 4567
          protocol: TCP
        - name: http-metrics
          containerPort: 4567
          protocol: TCP
        livenessProbe:
          httpGet:
            path: /healthz
            port: 4567
        readinessProbe:
          httpGet:
            path: /healthz
            port: 4567
        resources:
          limits:
            cpu: 100m
            memory: 128Mi
          requests:
            cpu: 10m
            memory: 64Mi
      imagePullSecrets:
        - name: github-regcred
